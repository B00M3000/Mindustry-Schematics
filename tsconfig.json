{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "checkJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "include": ["routes", "schema", "util", "./*.ts"]
}
